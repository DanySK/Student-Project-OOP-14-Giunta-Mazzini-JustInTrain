<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/tTrainCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        android:paddingLeft="4dp"
        android:layout_marginTop="8dp"

        android:textAllCaps="true" />
        <!--android:text="cat"-->

    <TextView
        android:id="@+id/tTrainNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_above="@+id/tDepartureStation"
        android:layout_toRightOf="@+id/tDepartureTime"

        android:layout_marginTop="8dp"
        android:layout_marginLeft ="8dp" />
        <!--android:text="num"-->


    <TextView
        android:id="@+id/tDepartureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tTrainCategory"
        android:layout_marginTop="4dp" />
    <!--android:text="19:21"-->


    <TextView
        android:id="@+id/tDepartureStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tTrainCategory"
        android:layout_toRightOf="@+id/tDepartureTime"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"

        android:textAllCaps="true" />
        <!--android:text="Pesaro"-->

    <TextView
        android:id="@+id/tArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tDepartureTime"
        android:layout_marginTop="4dp" />
        <!--android:text="20:55"-->


    <TextView
    android:id="@+id/tArrivalStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tDepartureStation"
        android:layout_toRightOf="@+id/tArrivalTime"

        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"

        android:textAllCaps="true" />
        <!--android:text="Cesena"-->

        <!--android:text="9'"-->


    <ImageButton
        android:id="@+id/bOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_pin"
        />

    <TextView
        android:id="@+id/tTimeDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@+id/bOptions"

        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"

        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/tDuration"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tArrivalTime"

        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp" />
        <!--android:text="01:30"-->


    <ImageView
        android:id="@+id/iDivider"
        android:layout_below="@id/tArrivalTime"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@color/accent_material_dark"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@android:drawable/divider_horizontal_bright"
        android:visibility="gone"/>

</RelativeLayout>
