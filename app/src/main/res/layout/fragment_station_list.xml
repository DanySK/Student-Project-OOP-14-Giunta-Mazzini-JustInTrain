<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Preferito"-->
        <!--android:id="@+id/add_favourite"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true" />-->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/lDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="4dp"

            android:layout_below="@id/tInfo"

            android:text="Delay: "
            />

        <TextView
            android:id="@+id/tDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="4dp"

            android:layout_toRightOf="@id/lDelay"
            android:layout_below="@+id/tInfo"

            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/lProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="8dp"

            android:layout_below="@id/lDelay"

            android:text="Progress: "
            />

        <TextView
            android:id="@+id/tProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="8dp"

            android:layout_below="@id/lDelay"
            android:layout_toRightOf="@id/lProgress"

            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/lLastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="8dp"

            android:layout_below="@id/lProgress"

            android:text="Last Seen: "
            />

        <TextView
            android:id="@+id/tLastSeenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"
            android:layout_marginTop="8dp"

            android:layout_toRightOf="@id/lLastSeen"
            android:layout_below="@id/lProgress"

            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tLastSeenStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="8dp"
            android:layout_marginTop="8dp"

            android:layout_toRightOf="@id/tLastSeenTime"
            android:layout_below="@id/lProgress"

            android:textStyle="bold"

            />

        </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="12dp"

        android:scrollbars="vertical"
    />

</LinearLayout>